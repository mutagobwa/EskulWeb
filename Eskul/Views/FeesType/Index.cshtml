@model Eskul.Models.FeesType
@{

    var listmodel = Model.Feestypes;
}

<br />
<div class="col-md-12">
    <partial name="_delete" />
    <div class="card card-outline card-default">
        <div class="card-body">
<section class="content">
    <div class="container-fluid">
        <div class="row">

           
            <!-- /.col-md-8 -->
            <div class="col-md-12">
                <div class="box box-primary">
                     <div class="card-body">
                         <p>
                         <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i>&nbsp; Add Fees Type</a>
                       </p>
                    <table id="example1" class="table table-bordered table-striped table-sm">
                        <thead>
                            <tr>
                                <th>
                                    Type Code
                                </th>
                                <th>
                                    TypeName
                                </th>
                                <th>
                                    Group Code
                                </th>
                                <th>
                                    Gl Account
                                </th>
                                @*<th>
                                    Type Description
                                </th>*@
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                           @if (listmodel!=null)
                                {
                                    @foreach (var item in listmodel)
                                    {
                                        <tr>
                                            <td>
                                                @item.TypeCode
                                                </td>
                                            <td>
                                                    @item.TypeName
                                            </td>
                                            <td>
                                                    @item.GroupCode
                                            </td>
                                            <td>
                                                    @item.GlAccount
                                            </td>
                                            @*<td>
                                                    @item.TypeDescription
                                            </td>*@
                                            <td>
                                                <a asp-action="Edit" class="btn btn-xs btn-primary" asp-route-id="@item.TypeCode">Edit</a>
                                            <button class="btn btn-xs btn-danger " id="delete" data-id="@item.TypeCode"data-toggle="modal" data-target="#modal-info" onclick="del('@item.TypeCode')" data-controller="FeesType" data-body-message="Are You Sure You Want To Delete This Stream">Del</button>

                                            </td>
                                        </tr>
                                    }
                                }
                            else
                                {
                                    <tr>
                                        <td colspan="6" class="text-centere">
                                                No Record Found 
                                        </td>
                                       
                                    </tr>
                                }
                        </tbody>
                    </table>
                </div>
                </div>
            </div>
            <!-- /.col-md-8 -->
        </div>
    </div>
</section>
</div>
</div>
</div>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/additional-methods.min.js"></script>
<script src="~/js/FormValidation.js"></script>
