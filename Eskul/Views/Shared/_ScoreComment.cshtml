@model Eskul.Models.ScoreRank
@{

    var editmodel = Model.commentmaster;
}
<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content box box-primary" style="width:350px;">
            <div class="modal-header">
                <h5 class="modal-title" style="font-weight:;">Add/Edit Score Comment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-action="ScoreComment" id="ReturnBook" class="needs-validation" novalidate>
                    <div class="form-group">
                        <input type="hidden" id="ScoreRankId" asp-for="ScoreRankId" />
                        <label asp-for="@Model.commentmaster.Comment" style="font-weight: normal !important;">Comment</label>
                        <textarea asp-for="@Model.commentmaster.Comment" name="Comment" class="form-control form-control-sm" required autocomplete="off"></textarea>
                        <div class="invalid-feedback">This Field is Required</div>

                    </div>
                    <div class="modal-footer justify-content-between">
                        <input type="submit" value="Save" class="btn btn-block btn-sm mybtn" />
                    </div>
                </form>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>