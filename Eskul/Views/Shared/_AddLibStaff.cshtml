@model Eskul.Models.StaffList
@{

    var editmodel = Model.libraryMember;
    //var listmodel = Model.subjectLists;
}
<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content box box-primary">
            <div class="modal-header">
                <h4 class="modal-title">Add Library Staff Member</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-action="AddLibStaff" class="needs-validation" novalidate>
                    <div class="form-group">
                        <input type="hidden" id="bookid" asp-for="Staffid" />
                        <label asp-for="@Model.libraryMember.LibraryCardNo">Library Card No</label>
                        <input asp-for="@Model.libraryMember.LibraryCardNo" class="form-control form-control-sm" required autocomplete="off" />
<div class="invalid-feedback">This Field is Required</div>

                    </div>
                    <div class="modal-footer justify-content-between">
                        <input type="submit" value="Save" class="btn btn-block btn-sm mybtn" />
                    </div>
                </form>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->