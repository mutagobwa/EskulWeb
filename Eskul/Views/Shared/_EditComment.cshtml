@model Eskul.Models.ScoreRank
@{

    var editmodel = Model.commentmaster;
}
<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content box box-primary" style="width:350px;">
            <div class="modal-header">
                <h4 class="modal-title">Edit Comment</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-action="EditComment" id="ReturnBook" class="needs-validation" novalidate>
                    <div class="form-group">
                        
                        <input type="hidden" id="CmId" name="CmId" asp-for="@editmodel.CmId" />
                        <input type="hidden" id="ScoreRankId" name="ScoreRankId" asp-for="@editmodel.ScoreRankId" />
                        <label asp-for="@editmodel.Comment" id="comment" style="font-weight: normal !important;">Comment</label>
                        <textarea asp-for="@editmodel.Comment" name="Comment" class="form-control form-control-sm" requred autocomplete="off"></textarea>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <input type="submit" value="Save" class="btn btn-block btn-sm mybtn" />
                    </div>
                </form>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>