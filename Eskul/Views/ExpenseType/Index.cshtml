@model Eskul.Models.ExpenseType
@{

    var listmodel = Model.expenseTypes;
}

<br />
<div class="col-md-12">
     <partial name="_delete" />
    <div class="card card-outline card-default">
        <div class="card-body">
<section class="content">
    <div class="container-fluid">
        @*<partial name="_Subject" />*@
        <div class="row">

            <div class="col-md-3">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="card-header mycard">
                                    <h3 class="card-title" style="font-weight: bold;">Add/Edit Expense</h3>
                                </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                                <form asp-action="Create" id="myform" class="needs-validation" novalidate>
                        <div class="card-body">
                             <input type="hidden" asp-for="ExpenseCode"/>
                            <div class="form-group">
                <label asp-for="ExpenseCode" style="font-weight: normal !important;">Code</label>
                <input asp-for="ExpenseCode" class="form-control form-control-sm" required disabled />
            </div>
            <div class="form-group">
                <label asp-for="ExpenseName" style="font-weight: normal !important;">Name</label>
                <input asp-for="ExpenseName" name="ExpenseName"class="form-control form-control-sm" required autocomplete="off" />
                                            <div class="invalid-feedback">This Field is Required</div>
            </div>
            
            <div class="form-group">
                <label asp-for="ExpenseDesc" style="font-weight: normal !important;">Description</label>
                <textarea asp-for="ExpenseDesc" class="form-control form-control-sm" required autocomplete="off"></textarea>
                                            <div class="invalid-feedback">This Field is Required</div>
            </div>

            <div class="form-group">
                                            <input type="submit" value="Save" class="btn btn-block btn-sm mybtn btn-centre" style="" />
            </div>
        </div>
                        <!-- /.card-body -->   
                    </form>
                </div>
                </div>
            <!-- /.col-md-8 -->
            <div class="col-md-9">
                <div class="box box-primary">
                     <div class="card-body">
                         <p>
                                        <a asp-action="Create" class="btn btn-sm mybtnsm"><i class="fa fa-plus"></i>&nbsp; Add Expense Type</a>
                       </p>
                    <table id="example1" class="table table-bordered table-striped table-sm">
                        <thead>
                            <tr>
                                <th>
                                    Code
                                </th>
                                <th>
                                   Name
                                </th>
                                <th>
                                   Description
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                           @if (listmodel!=null)
                                {
                                    @foreach (var item in listmodel)
                                    {
                                        <tr>
                                            <td>
                                                @item.ExpenseCode
                                                </td>
                                            <td>
                                                    @item.ExpenseName
                                            </td>
                                            <td>
                                                    @item.ExpenseName
                                            </td>
                                            <td>
                                                <a asp-action="Edit" class="btn btn-xs btn-primary" asp-route-id="@item.ExpenseCode">Edit</a>
                                               <button class="btn btn-xs btn-danger " id="delete" data-id="@item.ExpenseCode"data-toggle="modal" data-target="#modal-info" onclick="del('@item.ExpenseCode')" data-controller="ExpenseType" data-body-message="Are You Sure You Want To Delete This Stream">Delete</button>

                                            </td>
                                        </tr>
                                    }
                                }
                            else
                                {
                                    <tr>
                                        <td colspan="6" class="text-centere">
                                                No Record Found
                                        </td>
                                       
                                    </tr>
                                }
                        </tbody>
                    </table>
                </div>
                </div>
            </div>
            <!-- /.col-md-8 -->
        </div>
    </div>
</section>
</div>
</div>
</div>