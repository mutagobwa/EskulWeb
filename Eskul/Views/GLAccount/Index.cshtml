@model Eskul.Models.GLAccount
@{

    var listmodel = Model.gLAccounts;
}

<br />
<div class="col-md-12">
     <partial name="_delete" />
    <div class="card card-outline card-default">
        <div class="card-body">
<section class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-4">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="card-header mycard">
                                    <h3 class="card-title" style="font-weight: bold;">Add/Edit GL Account</h3>
                                </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Create" id="myform" class="needs-validation" novalidate>
                        <div class="card-body">
                             <input type="hidden" asp-for="SettingId"/>
                            <div class="form-group">
                <label asp-for="GlAccount" style="font-weight: normal !important;">Gl Account</label>
                <input asp-for="GlAccount" class="form-control form-control-sm" required autocomplete="off" />
            <div class="invalid-feedback">This Field is Required</div>
            </div>
            <div class="form-group">
                <label asp-for="GlAccountName" style="font-weight: normal !important;">GlAccount Name</label>
                <input asp-for="GlAccountName" class="form-control form-control-sm" required autocomplete="off"/>
            <div class="invalid-feedback">This Field is Required</div>
            </div>
            <div class="form-group">
             <label asp-for="BranchId" class="control-label" style="font-weight: normal !important;">Branch</label>
               @Html.DropDownList("BranchId", (IEnumerable<SelectListItem>)ViewBag.Branches, new { @class = "select",style = "width: 100%;",id="BranchId",name="BranchId",required = "required"})
            <div class="invalid-feedback">This Field is Required</div>
               </div>
            <div class="form-group">
                                            <input type="submit" value="Save" class="btn btn-block btn-sm mybtn btn-centre" style="" />
            </div>
        </div>
                        <!-- /.card-body -->   
                    </form>
                </div>
                </div>
            <!-- /.col-md-8 -->
            <div class="col-md-8">
                <div class="box box-primary">
                     <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped table-sm">
                        <thead>
                            <tr>
                                <th>
                                    Gl Account
                                </th>
                                <th>
                                    Gl Account Name
                                </th>
                                <th>
                                    Branch
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                           @if (listmodel!=null)
                                {
                                    @foreach (var item in listmodel)
                                    {
                                        <tr>
                                            <td>
                                                @item.GlAccount
                                                </td>
                                            <td>
                                                    @item.GlAccountName
                                            </td>
                                            <td>
                                                    @item.BranchId
                                            </td>
                                            <td>
                                                <a asp-action="Edit" class="btn btn-xs btn-primary" asp-route-id="@item.SettingId">Edit</a>
                                               <button class="btn btn-xs btn-danger " id="delete" data-id="@item.SettingId"data-toggle="modal" data-target="#modal-info" onclick="del('@item.SettingId')" data-controller="GLAccount" data-body-message="Are You Sure You Want To Delete This Stream">Del</button>

                                            </td>
                                        </tr>
                                    }
                                }
                            else
                                {
                                    <tr>
                                        <td colspan="5" class="text-centere">
                                                No Record Found 
                                        </td>
                                       
                                    </tr>
                                }
                        </tbody>
                    </table>
                </div>
                </div>
            </div>
            <!-- /.col-md-8 -->
        </div>
    </div>
</section>
</div>
</div>
</div>

