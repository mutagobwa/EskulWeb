@model Eskul.Models.HouseVm
@{

    var listmodel = Model.Houses;
}

<br />

<section class="content">
    <div class="container-fluid">
        @*<partial name="_Subject" />*@
        <div class="row">

            <div class="col-md-4">
                <!-- general form elements -->
                <div class="box box-primary">
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Create">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Code">House Code</label>
                                <input asp-for="Code" class="form-control form-control-sm" autocomplete="off"/>
                            </div>
                            <div class="form-group">
                                <label for="DiscountRate">House Name</label>
                                <input asp-for="Name" class="form-control form-control-sm" autocomplete="off"/>
                            </div>
                            
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-block btn-sm mybtn" />
                        </div>
                        </div>
                        <!-- /.card-body -->

                    </form>
                </div>
                </div>
            <!-- /.col-md-8 -->
            <div class="col-md-8">
                <div class="box box-primary">
                     <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped table-sm">
                        <thead>
                            <tr>
                                <th>
                                  House Code
                                </th>
                                <th>
                                    House Name
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                           @if (listmodel!=null)
                                {
                                    @foreach (var item in listmodel.Where(p=>p.StatusId==3))
                                    {
                                        <tr>
                                            <td>
                                                @item.Code
                                            </td>
                                            <td>
                                                    @item.Name
                                            </td>
                                            <td>
                                                <a asp-action="Edit" class="btn btn-xs btn-primary" asp-route-id="@item.Code">Edit</a>
                                                <a asp-action="Delete" class="btn btn-xs btn-danger" asp-route-id="@item.Code">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            else
                                {
                                    <tr>
                                        <td colspan="3" class="text-centere">
                                                No Record Found
                                        </td>
                                       
                                    </tr>
                                }
                        </tbody>
                    </table>
                </div>
                </div>
            </div>
            <!-- /.col-md-8 -->
        </div>
    </div>
</section>