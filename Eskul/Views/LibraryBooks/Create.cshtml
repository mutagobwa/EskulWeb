@model Eskul.Models.Book
<br/>
<div class="col-md-12">
    <div class="card card-outline card-default">
        <div class="card-body">
<section class="content">
    <div class="container-fluid">
                    <form asp-action="Create" id="myform" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 col-sm-6 col-md-12">
                            <div class="box box-primary">
                    <div class="card-body">
                        <div class="tab-content" id="custom-tabs-three-tabContent">
                            <div class="tab-pane fade show active" id="custom-tabs-three-home" role="tabpanel" aria-labelledby="custom-tabs-three-home-tab">
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="hidden" asp-for="BookId" />
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="BookTitle" class="control-label" style="font-weight: normal !important;">BookTitle</label>
                                           <input asp-for="BookTitle" name="BookTitle" class="form-control form-control-sm" autocomplete="off" required />
                                                        <div class="invalid-feedback">This Field is Required</div>
                                       </div>
                                        <div class="form-group">
                                            <label asp-for="BookNumber" class="control-label" style="font-weight: normal !important;">Book Number</label>
                                           <input asp-for="BookNumber" name="BookNumber" class="form-control form-control-sm" required autocomplete="off" required />
                                                        <div class="invalid-feedback">This Field is Required</div>
                                       </div>
                                        <div class="form-group">
                                            <label asp-for="IsbnNumber" class="control-label" style="font-weight: normal !important;">IsbnNumber</label>
                                                        <input asp-for="IsbnNumber" name="IsbnNumber" type="text" class="form-control form-control-sm" required autocomplete="off" />
                                                        <div class="invalid-feedback">This Field is Required</div>
                                                    </div>
                                        <div class="form-group">
                                            <label asp-for="Author" class="control-label" style="font-weight: normal !important;">Author</label>
                                                        <input asp-for="Author" name="Author" type="text" class="form-control form-control-sm" required autocomplete="off" />
<div class="invalid-feedback">This Field is Required</div>
                                                    </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Publisher" class="control-label" style="font-weight: normal !important;">Publisher</label>
                                                        <input asp-for="Publisher" name="Publisher" type="text" class="form-control form-control-sm" required autocomplete="off" />
                                                        <div class="invalid-feedback">This Field is Required</div>
                                                    </div>
                                        <div class="form-group">
                                            <label asp-for="Subject" class="control-label" style="font-weight: normal !important;">Subject</label>
                                                        @Html.DropDownList("Subject_codes", (IEnumerable<SelectListItem>) ViewBag.Subjects, new { @class = "select",style = "width: 100%;",id="Subject_codes",name="Subject_codes",required = "required"})
                                                        <div class="invalid-feedback">This Field is Required</div>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Qty" class="control-label" style="font-weight: normal !important;">Quantity</label>
                                                        <input asp-for="Qty" name="Qty" type="text" class="form-control form-control-sm" required autocomplete="off" />
                                                        <div class="invalid-feedback">This Field is Required</div>
                                                    </div>
                                        <div class="form-group">
                                            <label asp-for="Price" class="control-label" style="font-weight: normal !important;">Price</label>
                                                        <input asp-for="Price" name="Price" type="text" class="form-control form-control-sm" required autocomplete="off" />
                                                        <div class="invalid-feedback">This Field is Required</div>
                                                    </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="BookDescription" class="control-label" style="font-weight: normal !important;">Book Description</label>
                                                        <input asp-for="BookDescription" name="BookDescription" type="text" class="form-control form-control-sm" required autocomplete="off" />
                                                        <div class="invalid-feedback">This Field is Required</div>
                                                    </div>
                                        <div class="form-group">
                                            <label asp-for="RackNumber" class="control-label" style="font-weight: normal !important;">Rack Number</label>
                                                        <input asp-for="RackNumber" name="RackNumber" type="text" class="form-control form-control-sm" required autocomplete="off" />
                                                        <div class="invalid-feedback">This Field is Required</div>
                                                    </div>
                                        <div class="form-group">
                                            <label asp-for="Available" class="control-label" style="font-weight: normal !important;">Available</label>
                                                        <input asp-for="Available" name="Available" type="text" class="form-control form-control-sm" required autocomplete="off" />
                                                        <div class="invalid-feedback">This Field is Required</div>
                                                    </div>
                                        <div class="form-group">
                                                        <input type="submit" value="Save" class="btn btn-block btn-sm mybtnlg" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </form>

    </div>
</section>
</div>
</div>
</div>

