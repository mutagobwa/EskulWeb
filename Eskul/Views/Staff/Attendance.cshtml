@model Eskul.Models.StaffList
@{

    var listmodel = Model.staffLists;
    //var dob = Model.AttendanceDate == null ? DateTime.Now.ToString("yyyy-MM-dd") : Model.AttendanceDate.ToString("yyyy-MM-dd");
    
}
<br/>
<div class="col-md-12">

    <div class="card card-outline card-default">
        <div class="card-body">
            <div class="col-md-12">

                <div class="card card-outline card-default box box-primary">
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <form asp-action="Attendance" id="StudAtt" class="needs-validation" novalidate>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="Category" class="control-label" style="font-weight: normal !important;" id="Staffcategory">Staff Category</label><small class="req"> *</small>
                                        @Html.DropDownListFor(m => m.Category, new List<SelectListItem>
                                        {       new SelectListItem{Text="Select", Value=""},
                                        new SelectListItem{Text="Teaching", Value="T"},
                                        new SelectListItem{Text="Non Teaching", Value="NT"}},htmlAttributes:new { @class = "select",style = "width: 100%;",id="Category",name="Category",required = "required"})})
                                        <div class="invalid-feedback">This Field is Required</div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="Dob" class="control-label" style="font-weight: normal !important;">Date</label><small class="req"> *</small>
                                        <input type="date" id="Dob" value="" class="form-control form-control-sm" />
                                    </div>
                                    <div class="invalid-feedback">This Field is Required</div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <input type="submit" value="Load" class="btn btn-sm mybtn" style="margin:30px;width:150px" />
                                    </div>
                               
                            </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card card-outline card-default box box-primary">
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>
                                        Staff No
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    <th>
                                        Comment
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (listmodel != null)
                                {
                                    @foreach (var item in listmodel)
                                    {
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Staffno)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FullName)
                                            </td>

                                            <td>
                                                <input type="radio" name="status-@item.Staffno" value="P" @(item.Status == "P" ? "checked" : "") /> Present
                                                <input type="radio" name="status-@item.Staffno" value="A" @(item.Status == "A" ? "checked" : "") /> Absent
                                                <input type="radio" name="status-@item.Staffno" value="L" @(item.Status == "L" ? "checked" : "") /> Late
                                                <input type="radio" name="status-@item.Staffno" value="HD" @(item.Status == "HB" ? "checked" : "") /> Half Day
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                <textarea class="form-control form-control-sm" style="height:30px;"></textarea>
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                }
                                else
                                {
                                    <tr>
                                        <td colspan="10" class="text-centere">
                                            No Record Found
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                    <!-- /.col-md-12 -->
                </div>
            </div>
        </div>
    </div>
</div>



