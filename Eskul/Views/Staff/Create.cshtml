                                         <div class="form-group">
                                            <label asp-for="Religion" class="control-label" style="font-weight: normal !important;" id="religioncode">Religion</label><small class="req"> *</small>
                                                                @Html.DropDownListFor(m => m.Religion, new List<SelectListItem>
