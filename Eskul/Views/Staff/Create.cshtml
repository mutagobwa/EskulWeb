                                                                <label asp-for="Paytypecode" class="control-label" style="font-weight: normal !important;" id="religioncode">Pay Type</label><small class="req"> *</small>
                                                                @Html.DropDownList("Paytypecode", (IEnumerable<SelectListItem>)ViewBag.PayTypes, new { @class = "select",style = "width: 100%;",id="Paytypecode",name="Paytypecode",required = "required"})
                                                                <div class="invalid-feedback">This Field is Required</div>
