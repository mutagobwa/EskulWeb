                                                                @Html.DropDownListFor(m => m.Citizentype, new List<SelectListItem>
                                                            {
                                                            new SelectListItem{Text="Select", Value=""},
                                                            new SelectListItem{Text="By Birth", Value="1"},
                                                            new SelectListItem{Text="By Registration", Value="2"},
                                                            new SelectListItem{Text="By Presumption", Value="3"},
                                                            new SelectListItem{Text="By Naturalization", Value="4"},
                                                            new SelectListItem{Text="Dual Citizenship", Value="5"}
                                                            }, htmlAttributes: new { @class = "select", style = "width: 100%;", id = "Citizentype", name = "Citizentype", required = "required" })
                                                                <div class="invalid-feedback">This Field is Required</div>
                                            </div>
                                            </div>
                                                        <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label asp-for="Category" class="control-label" style="font-weight: normal !important;" id="Staffcategory">Staff Category</label><small class="req"> *</small>
                                                                @Html.DropDownListFor(m => m.Category, new List<SelectListItem>
                                                            {       new SelectListItem{Text="Select", Value=""},
                                                            new SelectListItem{Text="Teaching", Value="T"},
                                                            new SelectListItem{Text="Non Teaching", Value="NT"}},htmlAttributes:new { @class = "select",style = "width: 100%;",id="Staffcategory",name="Staffcategory",required = "required"})
                                                                <div class="invalid-feedback">This Field is Required</div>
                                                                </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label asp-for="AcLevel" class="control-label" style="font-weight: normal !important;" id="religioncode">Academic Level</label><small class="req"> *</small>
                                                                @Html.DropDownListFor(m => m.AcLevel, new List<SelectListItem>
                                                            {
                                                            new SelectListItem{Text="Select", Value=""},
                                                            new SelectListItem{Text="Degree", Value="DEG"},
                                                            new SelectListItem{Text="Diploma", Value="DIP"},
                                                            new SelectListItem{Text="Master", Value="MAS"},
                                                            new SelectListItem{Text="Others", Value="OTH"},
                                                            new SelectListItem{Text="P.L.E", Value="PLE"},
                                                            new SelectListItem{Text="U.A.C.E", Value="UACE"},
                                                            new SelectListItem{Text="U.C.E", Value="UCE"}
                                                            }, htmlAttributes: new { @class = "select", style = "width: 100%;", id = "Aclevel", name = "Aclevel", required = "required" })
                                                                <div class="invalid-feedback">This Field is Required</div>
                                                                </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label asp-for="PositionTitle" class="control-label" style="font-weight: normal !important;">Position Title</label>
                                                                <input asp-for="PositionTitle" class="form-control form-control-sm" autocomplete="off" />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label asp-for="Contact1" class="control-label" style="font-weight: normal !important;">Primary Contact</label><small class="req"> *</small>
                                                                <input type="tel" asp-for="Contact1" id="Contact1" name="Contact1" class="form-control form-control-sm" required autocomplete="off" />
                                                                <div class="invalid-feedback">This Field is Required Or Invalid Sequence(07)</div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label asp-for="Contact2" class="control-label" style="font-weight: normal !important;">Other Contact</label>
                                                                <input asp-for="Contact2" class="form-control form-control-sm" autocomplete="off" />
                                                            </div>
                                                        </div>
                                                            <div class="col-md-3">
                                                                <div class="form-group">
                                                                <label asp-for="PassPortNo" class="control-label" style="font-weight: normal !important;">PassPortNo</label>
                                                                <input asp-for="PassPortNo" class="form-control form-control-sm" autocomplete="off" />
                                                                </div>
                                                            </div>
                                       
                            <div class="col-md-3">
                                        <div class="form-group">
                                                                <label asp-for="NiN" class="control-label" style="font-weight: normal !important;">NIN</label>
                                            <input asp-for="NiN" class="form-control form-control-sm"  autocomplete="off"  />
                                        </div>
                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label asp-for="Residence" class="control-label" style="font-weight: normal !important;"></label>
                                                                <input asp-for="Residence" class="form-control form-control-sm" autocomplete="off" />
                                                            </div>
                                                        </div>

                                                        <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label asp-for="Email" class="control-label" style="font-weight: normal !important;"></label>
                                                                <input asp-for="Email" class="form-control form-control-sm" autocomplete="off" />
                                                            </div>
                                                        </div>
                                        <div class="col-md-3">
                                        <div class="form-group">
                                            <label asp-for="Tribe" class="control-label" style="font-weight: normal !important;"></label>
                                            <input asp-for="Tribe" class="form-control form-control-sm" autocomplete="off"  />
                                        </div>
                                        </div>
                                                    <div class="col-md-3">
                                        <div class="form-group form-check">
                                            <label class="form-check-label">
                                                                    <input class="form-check-input" asp-for="IsRegistered" /> @Html.DisplayNameFor(model => model.IsRegistered)
                                            </label>
                                        </div>
                                        </div>
                                        <div class="col-md-3">
                                        <div class="form-group">
                                        <label asp-for="RegistrationNo" class="control-label" style="font-weight: normal !important;">RegistrationNo</label>
                                            <input asp-for="RegistrationNo" class="form-control form-control-sm" autocomplete="off"  />
                                        </div>
                                        </div>
                                                        <div class="col-12 col-sm-12 col-md-3">
                                                            <label for="termcode" style="font-weight: normal !important;">Staff Photo</label>

                                                            <div class="box-body text-center" id="image_upload_preview">
                                                                <input type="file" class="btn btn-primary col start" name="files" onchange="readfile(this);" value="Browse">
                                                            </div>

                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label asp-for="PayType" class="control-label" style="font-weight: normal !important;" id="religioncode">Pay Type</label><small class="req"> *</small>
                                                                @Html.DropDownListFor(m => m.PayType, new List<SelectListItem>
                                                            {       new SelectListItem{Text="Select", Value=""},
                                                            new SelectListItem{Text="Contract", Value="C"},
                                                            new SelectListItem{Text="Full Time", Value="F"},
                                                            new SelectListItem{Text="Part Time", Value="P"}},
                                                            "Select",htmlAttributes:new { @class = "select",style = "width: 100%;",name="PayType"})
                  
                                                            </div>
                                                        </div>
                                         
                                                        @* <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label asp-for="Departmentcode" class="control-label" style="font-weight: normal !important;" id="religioncode">Department</label><small class="req"> *</small>
                                                                @Html.DropDownList("Departmentcode", (IEnumerable<SelectListItem>)ViewBag.Departments, new { @class = "select",style = "width: 100%;",id="Departmentcode",name="Departmentcode",required = "required"})
                                                                <div class="invalid-feedback">This Field is Required</div>
                                                                </div>
