@using SmartPaperEdms.Web.App_Code;
@model Eskul.Models.StaffModel
<br/>
<style>
    .pagetitleh2 {
        background: #f2f2f2;
        margin: 0;
        font-size: 16px;
        padding: 8px 14px;
        color: #000;
        border-bottom: 1px solid #d7dfe3;
    }
</style>
@using (Html.BeginForm("Create", "Staff", FormMethod.Post, new { @enctype = "multipart/form-data", id = "Staff", @class = "needs-validation", novalidate = "true" }))

{
    <div class="col-md-12">
        <div class="card card-outline card-default">
            <br />
            <div class="col-12 col-sm-6 col-md-12">
                <a asp-action="BulkStaff" class="btn btn-sm mybtnsm"><i class="fa fa-plus"></i>&nbsp; Bulk Staff Import</a>

            </div>
            <div class="card-body">
                <section class="content">
