                                                                @Html.DropDownList("Salaryscale", (IEnumerable<SelectListItem>)ViewBag.SalaryScales, new { @class = "select",style = "width: 100%;",id="Salaryscale",name="Salaryscale",required = "required"})
                                                                <div class="invalid-feedback">This Field is Required</div>
