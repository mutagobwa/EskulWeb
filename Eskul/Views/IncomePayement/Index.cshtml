
@model List<PayslipModel>
<style>
    .image-container {
   position: absolute;
        top: 0;
   left: 100%;
    width: 700px;
    height: 300px;
    overflow: hidden;
    z-index:999;
}

.image-container img {
   
    width: 100%;
    height: 100%;
    object-fit:contain;
}

.image-container {
    position:absolute;
    top:50%;
    left: 30%;
   transform:translate(-50%,-50%);
}

</style>
<br />
<div class="col-md-12">
    <div class="card card-outline card-default">
        <div class="card-body">
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="box box-primary">
                                <div class="box box-primary">
                                </div>
                                </div>
                            </div>
                        <div class="col-md-8">
                            <div class="box box-primary">
                                <div class="card-body">
  <table id="example1" class="table table-bordered table-striped table-sm">
    <thead>
        <tr>
            <th>Student No</th>
            <th>Student Name</th>
             <th>Branch</th>
             <th>Pay Mode</th>
             <th>Slip No</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payslip in Model)
        {
            <tr>
                <td>@payslip.StudentNo</td>
                <td>@payslip.StudentName</td>
                <td>@payslip.Branch</td>
                <td>@payslip.PayMode</td>
                <td>@payslip.SlipNo</td>
                <td>
                    <button class="view-button" data-image="@payslip.PayslipImage"><i class="fa fa-eye"></i></button>
                    <div class="image-container"></div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
                            </div>
</div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
@section scripts {
    <script>
        const viewButtons = document.querySelectorAll('.view-button');

        viewButtons.forEach((button) => {
            const imageBase64 = button.dataset.image;
            const imageContainer = button.nextElementSibling;

            button.addEventListener('mouseover', () => {
                const imageElement = document.createElement('img');
                imageElement.src = `data:image/png;base64,${imageBase64}`;
                imageContainer.appendChild(imageElement);
            });

            button.addEventListener('mouseout', () => {
                while (imageContainer.firstChild) {
                    imageContainer.removeChild(imageContainer.firstChild);
                }
            });
        });
    </script>
}
